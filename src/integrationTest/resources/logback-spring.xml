<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logs-folder" value="./logs" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%cyan(%thread)] %highlight(%-5level) %yellow(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="Console" />
    </root>

    <logger name="school.faang" level="info" additivity="false">
        <appender-ref ref="Console" />
    </logger>

</configuration>
